<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.NewCalculator" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/indigo_500</item>
        <item name="colorPrimaryVariant">@color/indigo_700</item>
        <item name="colorOnPrimary">@color/indigo_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="BlueGreyStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">@dimen/calcButtonSize</item>
        <item name="colorPrimary">@color/blue_grey_800</item>
        <item name="android:windowBackground">@color/blue_grey_300</item>
        <item name="colorPrimaryDark">@color/blue_grey_500</item>
        <item name="colorSecondary">@color/blue_grey_A700</item>
        <item name="android:textColor">@color/blue_grey_100</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="LightBlueStyle" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="android:textSize">@dimen/calcButtonSize</item>
        <item name="colorPrimary">@color/light_blue_500</item>
        <item name="android:windowBackground">#B3FAFC</item>
        <item name="colorPrimaryDark">@color/light_blue_200</item>
        <item name="colorSecondary">@color/light_blue_A700</item>
        <item name="android:textColor">@color/light_blue_900</item>
        <item name="android:fontFamily">cursive</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="RedStyle" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:textSize">@dimen/calcButtonSize</item>
        <item name="colorPrimary">@color/red_500</item>
        <item name="android:windowBackground">@color/red_100</item>
        <item name="colorPrimaryDark">@color/red_200</item>
        <item name="colorSecondary">@color/red_A700</item>
        <item name="android:textColor">@color/red_900</item>
        <item name="android:fontFamily">sans-serif-condensed-medium</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>
